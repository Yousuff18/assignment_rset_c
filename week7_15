#include <stdio.h>
#include <math.h>

struct Point {
    double x;
    double y;
};

double calculateDistance(struct Point p1, struct Point p2) {
    return sqrt(pow(p2.x - p1.x, 2) + pow(p2.y - p1.y, 2));
}

int main() {
    struct Point point1, point2;
    double distance1, distance2, totalDistance;

    scanf("%lf %lf", &point1.x, &point1.y);
    scanf("%lf %lf", &point2.x, &point2.y);

    distance1 = calculateDistance(point1, point2);

    scanf("%lf %lf", &point1.x, &point1.y);
    scanf("%lf %lf", &point2.x, &point2.y);

    distance2 = calculateDistance(point1, point2);

    totalDistance = distance1 + distance2;

    printf("%lf\n", totalDistance);

    return 0;
}