#include <stdio.h>

int main() {
    int choice, rows, cols, i, j;
    int matrix1[10][10], matrix2[10][10], result[10][10], transposed[10][10];
    int matricesEntered = 0;

    printf("Enter the number of rows and columns of the matrices: ");
    scanf("%d %d", &rows, &cols);

    do {
        printf("\nMenu:\n");
        printf("1. Read and display matrices\n");
        printf("2. Find the sum of two matrices and print it\n");
        printf("3. Display the transpose of a matrix\n");
        printf("4. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("\nEnter matrix 1:\n");
                for (i = 0; i < rows; i++) {
                    for (j = 0; j < cols; j++) {
                        printf("Enter element at position (%d, %d): ", i + 1, j + 1);
                        scanf("%d", &matrix1[i][j]);
                    }
                }
                printf("\nMatrix 1:\n");
                for (i = 0; i < rows; i++) {
                    for (j = 0; j < cols; j++) {
                        printf("%d\t", matrix1[i][j]);
                    }
                    printf("\n");
                }

                printf("\nEnter matrix 2:\n");
                for (i = 0; i < rows; i++) {
                    for (j = 0; j < cols; j++) {
                        printf("Enter element at position (%d, %d): ", i + 1, j + 1);
                        scanf("%d", &matrix2[i][j]);
                    }
                }
                printf("\nMatrix 2:\n");
                for (i = 0; i < rows; i++) {
                    for (j = 0; j < cols; j++) {
                        printf("%d\t", matrix2[i][j]);
                    }
                    printf("\n");
                }
                matricesEntered = 1;
                break;
            case 2:
                if (matricesEntered) {
                    printf("\nSum of matrices:\n");
                    for (i = 0; i < rows; i++) {
                        for (j = 0; j < cols; j++) {
                            result[i][j] = matrix1[i][j] + matrix2[i][j];
                            printf("%d\t", result[i][j]);
                        }
                        printf("\n");
                    }
                } else {
                    printf("Please enter matrices first.\n");
                }
                break;
            case 3:
                printf("\nEnter the matrix to find its transpose (1 for matrix1, 2 for matrix2): ");
                scanf("%d", &choice);
                if (choice == 1) {
                    printf("\nTranspose of matrix 1:\n");
                    for (j = 0; j < cols; j++) {
                        for (i = 0; i < rows; i++) {
                            printf("%d\t", matrix1[i][j]);
                        }
                        printf("\n");
                    }
                } else if (choice == 2) {
                    printf("\nTranspose of matrix 2:\n");
                    for (j = 0; j < cols; j++) {
                        for (i = 0; i < rows; i++) {
                            printf("%d\t", matrix2[i][j]);
                        }
                        printf("\n");
                    }
                } else {
                    printf("Invalid choice\n");
                }
                break;
            case 4:
                printf("\nExiting...\n");
                return 0;
            default:
                printf("Invalid choice\n");
        }
    } while (1);

    return 0;
}